<?xml version="1.0" encoding="UTF-8" ?>
<Shell x:Class="OefeningPublishers.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:OefeningPublishers"
    xmlns:views="clr-namespace:OefeningPublishers.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Home">
            <ShellContent Title="Home"
                ContentTemplate="{DataTemplate views:MainPage}"
                Route="MainPage" />
        </Tab>
        <Tab Title="Stores">
            <ShellContent Title="Stores"
                ContentTemplate="{DataTemplate views:StoresPage}"
                Route="StoresPage" />
        </Tab>
        <Tab Title="Werknemers">
            <ShellContent Title="Werknemers"
                ContentTemplate="{DataTemplate views:EmployeesPage}"
                Route="EmployeesPage" />
        </Tab>
    </TabBar>
</Shell>