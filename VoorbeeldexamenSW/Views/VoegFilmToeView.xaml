<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Voorbeeldexamen.Views.VoegFilmToeView"
             xmlns:viewmodel="clr-namespace:Voorbeeldexamen.ViewModels"
             xmlns:model="clr-namespace:Voorbeeldexamen.Models"
             x:DataType="viewmodel:FilmViewModel"
             Title="VoegFilmToeView">

    <StackLayout>
        <Entry Placeholder="Titel" Text="{Binding Movie.title}" />
        <Entry Placeholder="Director" Text="{Binding Movie.director}" />

        <Button Text="Toevoegen" Command="{Binding VoegFilmToeCommand}" />
    </StackLayout>

</ContentPage>