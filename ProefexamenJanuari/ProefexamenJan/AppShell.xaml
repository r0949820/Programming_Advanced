<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ProefexamenJan.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ProefexamenJan"
    xmlns:views="clr-namespace:ProefexamenJan.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Books">
            <ShellContent Title="Books" ContentTemplate="{DataTemplate views:MainPage}" Route="MainPage" />
        </Tab>
        <Tab Title="Employees">
            <ShellContent Title="Employees" ContentTemplate="{DataTemplate views:EmployeePage}" Route="EmployeePage" />
        </Tab>
    </TabBar>
</Shell>
