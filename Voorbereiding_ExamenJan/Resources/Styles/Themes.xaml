<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Voorbereiding_ExamenJan.Resources.Styles.Themes">

    <!-- Light Theme -->
    <Color x:Key="BackgroundColorLight">#FFFFFF</Color>
    <Color x:Key="TextColorLight">#000000</Color>

    <!-- Dark Theme -->
    <Color x:Key="BackgroundColorDark">#000000</Color>
    <Color x:Key="TextColorDark">#FFFFFF</Color>

    <!-- Common Styles -->
    <Style x:Key="BackgroundColorStyle" TargetType="Grid">
        <Style.Triggers>
            <Trigger TargetType="Grid" Property="BackgroundColor" Value="{DynamicResource BackgroundColor}" />
        </Style.Triggers>
    </Style>

    <Style x:Key="TextColorStyle" TargetType="Label">
        <Style.Triggers>
            <Trigger TargetType="Label" Property="TextColor" Value="{DynamicResource TextColor}" />
        </Style.Triggers>
    </Style>

</ResourceDictionary>