<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Voorbereiding_ExamenJan.Views.OptionsPage"
              xmlns:viewmodel="clr-namespace:Voorbereiding_ExamenJan.ViewModels"
              x:DataType="viewmodel:OptionsViewModel"
             Title="OptionsPage">
    <VerticalStackLayout>
        <Label Text="Dark Mode" VerticalOptions="Center" Grid.Row="0" Grid.Column="0"/>
        <Switch x:Name="ToggleTheme" 
            IsToggled="{Binding IsToggled}" 
            Toggled="OnToggled" />
    </VerticalStackLayout>
</ContentPage>